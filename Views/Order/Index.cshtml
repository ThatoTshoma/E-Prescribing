@model List<Order>
@{
    ViewData["Title"] = "List Medication";
    Layout = "~/Views/Shared/_AnaesthesiologistLayout.cshtml";
}
<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">Medication</li>
        <li class="active">List Medication</li>
    </ol>
</div>
<div class="container px-6 mx-auto grid">

    <h2><b>@ViewData["Title"]</b></h2>
    <hr />


<div class="row">
    <div class="col-md-8 offset-2">


        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Order Number</th>
                    <th>Medication</th>
               
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td class="align-middle">@order.OrderId</td>

                        <td class="align-middle">
                            <ul style="list-style-type:none">
                                @foreach (var item in order.MedicationOrders)
                                {
                                    <li>
                                        <div class="alert alert-info" role="alert">
                                            <span class="badge bg-success">@item.Quantity</span> - @item.Medication.Name
                                        </div>
                                    </li>
                                }
                            </ul>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
</div>