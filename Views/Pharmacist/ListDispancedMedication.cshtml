@model IEnumerable<Prescription>

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Dispanced Prescription List</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">


        <table id="tblData" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Patient Name</th>
                    <th>Medication Name</th>
                    <th>Medication Quantity</th>
                    <th>Status</th>
                    <th>IsUrgent</th>
                    <th>Action</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
</div>

@section Scripts {
    <script src="//cdn.datatables.net/1.13.3/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
        var dataTable;

        $(document).ready(function () {

            loadDataTable();
        });

        function loadDataTable() {
            dataTable = $('#tblData').DataTable({
                "ajax": {
                    url: '/pharmacist/getDispancedPrescription',
                    dataSrc: 'data'
                },
                "columns": [
                    { data: 'date', "width": "10%" },
                    { data: 'patient', "width": "25%" },

                    { data: 'medications', "width": "20%", "render": function (data) { return data.replace(/\n/g, '<br>'); } },
                    { data: 'quantities', "width": "10%", "render": function (data) { return data.replace(/\n/g, '<br>'); } },
                    { data: 'status', "width": "10%" },
                    { data: 'urgent', "width": "10%" },
                    {
                        data: 'prescriptionId',
                        "render": function (data, type, row) {
                            let viewButton = `<a href="/pharmacist/Prescription/${data}" class="btn btn-primary mx-1"> <i class="bi bi-eye-fill"></i> View</a>`;
                            let dispenseButton = row.status != "Dispensed" && row.status != "Rejected"
                                ? `<a href="/pharmacist/DispenseMedication?prescriptionId=${data}" class="btn btn-primary mx-1"> <i class="bi bi-pencil-square"></i> Dispense</a>`
                                : '';
                            let rejectButton = row.status == "Prescribed"
                                ? `<a href="/pharmacist/RejectPrescription?id=${data}" class="btn btn-danger mx-1"> <i class="bi bi-trash-fill"></i> Reject</a>`
                                : '';

                            return `<div class="btn-group" role="group">${viewButton}${dispenseButton}${rejectButton}</div>`;
                        },
                        "width": "15%"
                    }
                ]
            });
        }



        function Delete(url) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: url,
                        type: 'DELETE',
                        success: function (data) {
                            if (data.success) {
                                dataTable.ajax.reload();
                                toastr.success(data.message);
                            } else {
                                toastr.error(data.message);
                            }
                        },
                        error: function (err) {
                            toastr.error("Error while deleting");
                        }
                    });
                }
            });
        }
    </script>
}
