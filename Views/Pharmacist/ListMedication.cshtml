@model IEnumerable<Medication>

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Medication List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Pharmacist" asp-action="AddMedication" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add New Medication
                </a>
            </div>
        </div>

        <table id="tblData" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Medication Name</th>
                    <th>Dosage Form</th>
                    <th>Schedule</th>
                    <th>Active Ingredient</th>
                    <th>Strength</th>
                    <th>Action</th>
                </tr>
            </thead>
        </table>

    </div>
</div>

@section Scripts {
    <script src="//cdn.datatables.net/1.13.3/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
        var dataTable;

        $(document).ready(function () {
            loadDataTable();
        });

        function loadDataTable() {
            dataTable = $('#tblData').DataTable({
                "ajax": {
                    "url": '/pharmacist/getMedication',
                    "dataSrc": 'data'
                },
                "columns": [
                    { "data": 'name', "width": "25%" },
                    { "data": 'dosageForm.name', "width": "15%" },
                    { "data": 'schedule', "width": "10%" },
                    {
                        "data": 'activeIngredients',
                        "render": function (data) {
                            return data.map(item => item.name).join('<br>');
                        },
                        "width": "20%"
                    },
                    {
                        "data": 'activeIngredients',
                        "render": function (data) {
                            return data.map(item => item.strength).join('<br>');
                        },
                        "width": "15%"
                    },
                    {
                        "data": 'medicationId',
                        "render": function (data) {
                            return `<div class="w-75 btn-group" role="group">
                                                        <a href="/pharmacist/updateMedication?medicationId=${data}" class="btn btn-primary mx-2">
                                                    <i class="bi bi-pencil-square"></i> Edit
                                                </a>
                                                <a onClick=Delete('/pharmacist/deleteMedication/${data}') class="btn btn-danger mx-2">
                                                    <i class="bi bi-trash-fill"></i> Delete
                                                </a>
                                            </div>`;
                        },
                        "width": "25%"
                    }
                ]
            });
        }

        function Delete(url) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: url,
                        type: 'DELETE',
                        success: function (data) {
                            if (data.success) {
                                dataTable.ajax.reload();
                                Swal.fire({
                                    title: "Deleted!",
                                    text: "Medication has been deleted.",
                                    icon: "success"
                                });
                            } else {
                                toastr.error(data.message);
                            }
                        },
                        error: function (err) {
                            toastr.error("Error while deleting");
                        }
                    });
                }
            });
        }
    </script>
}




