@model ContraIndication

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> @(Model.ContraIndicationId != 0 ? "Update" : "Add") Contra-Indication</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div class="border p-3">

                <div class="form-floating py-2 col-12">
                    <label asp-for="ActiveIngredientId"></label>

                <select asp-for="ActiveIngredientId" asp-items="@ViewBag.IngredientList" class="form-control">
                        <option disabled selected value="">Select Active Ingredient</option>
                </select>
                <span asp-validation-for="ActiveIngredientId" class="text-danger"></span>


            </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="ConditionDiagnosisId"></label>
                <select asp-for="ConditionDiagnosisId" asp-items="@ViewBag.ConditionList" class="form-control">
                    <option disabled selected value="">Select Condition Diagnosis</option>
                </select>
                <span asp-validation-for="ConditionDiagnosisId" class="text-danger"></span>


            </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        @if (Model.ContraIndicationId != 0)
                        {
                            <button type="submit" class="btn btn-primary form-control">Update</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary form-control">Add</button>
                        }
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Admin" asp-action="ListContraIndication" class="btn btn-outline-primary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>


            </div>

        </form>
    </div>
    </div>
    

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}