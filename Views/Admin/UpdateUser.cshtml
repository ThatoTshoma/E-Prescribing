@model E_Prescribing.Models.UserViewModel

@{
    ViewData["Title"] = "Update User";
}

<h2>Update User</h2>

<form asp-action="UpdateUser" method="post">
    <input type="hidden" asp-for="UserId" />

    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="UserRole" class="control-label"></label>
        <input asp-for="UserRole" class="form-control" readonly />
    </div>

    @if (Model.UserRole == "Nurse")
    {
        <h4>Nurse Details</h4>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Surname" class="control-label"></label>
            <input asp-for="Surname" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ContactNumber" class="control-label"></label>
            <input asp-for="ContactNumber" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="RegistrationNumber" class="control-label"></label>
            <input asp-for="RegistrationNumber" class="form-control" />
        </div>
    }
    else if (Model.UserRole == "Pharmacist")
    {
        <h4>Pharmacist Details</h4>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Surname" class="control-label"></label>
            <input asp-for="Surname" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ContactNumber" class="control-label"></label>
            <input asp-for="ContactNumber" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="RegistrationNumber" class="control-label"></label>
            <input asp-for="RegistrationNumber" class="form-control" />
        </div>
    }
    else if (Model.UserRole == "Surgeon")
    {
        <h4>Surgeon Details</h4>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Surname" class="control-label"></label>
            <input asp-for="Surname" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ContactNumber" class="control-label"></label>
            <input asp-for="ContactNumber" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="RegistrationNumber" class="control-label"></label>
            <input asp-for="RegistrationNumber" class="form-control" />
        </div>
    }
    else if (Model.UserRole == "Anaesthesiologist")
    {
        <h4>Anaesthesiologist Details</h4>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Surname" class="control-label"></label>
            <input asp-for="Surname" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ContactNumber" class="control-label"></label>
            <input asp-for="ContactNumber" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="RegistrationNumber" class="control-label"></label>
            <input asp-for="RegistrationNumber" class="form-control" />
        </div>
    }

    <button type="submit" class="btn btn-primary">Update User</button>
</form>
