@model IEnumerable<Nurse>
@{
    ViewData["Title"] = "List Nurses";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">Nurses</li>
        <li class="active">List Nurses</li>
    </ol>
</div>
<div class="container px-6 mx-auto grid">

    <h2><b>@ViewData["Title"]</b></h2>
    <hr />



    <div class="col-6 text-end mb-4">
        <a asp-action="AddUser"  class="btn btn-primary">

            <i class="bi bi-plus-circle"></i> &nbsp; Add New Nurse
        </a>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>ContactNumber</th>
                <th>Email Address</th>
                <th>Registration Number</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var nurse in Model)
            {
                <tr>
                    <td>@nurse.FullName</td>
                    <td>@nurse.ContactNumber</td>
                    <td>@nurse.EmailAddress</td>
                    <td>@nurse.RegistrationNumber</td>

                </tr>
            }
        </tbody>
    </table>
</div>
