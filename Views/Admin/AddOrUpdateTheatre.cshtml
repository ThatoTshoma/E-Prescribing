@model Theatre

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> @(Model.TheatreId != 0 ? "Update" : "Add") Theatre</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">

            <div class="border p-3">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-floating py-2 col-12">
                    <label asp-for="Name"></label>

                    <input asp-for="Name" class="form-control" aria-required="true" placeholder="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <label asp-for="WardId"></label>

                    <select asp-for="WardId" asp-items="@ViewBag.WardList" class="form-control">
                        <option value="">Select Ward</option>
                    </select>
                    <span asp-validation-for="WardId" class="text-danger"></span>


                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        @if (Model.TheatreId != 0)
                        {
                            <button type="submit" class="btn btn-primary form-control">Update</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary form-control">Add</button>
                        }
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Admin" asp-action="ListTheatre" class="btn btn-outline-primary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>
      



            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}