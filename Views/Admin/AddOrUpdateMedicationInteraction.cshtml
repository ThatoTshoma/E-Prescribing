@model MedicationInteraction

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> @(Model.InteractionId != 0 ? "Update" : "Add") Medication Interaction</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">

            <div class="border p-3">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-floating py-2 col-12">
                    <label asp-for="ActiveIngredient1Id"></label>
                    <select asp-for="ActiveIngredient1Id" asp-items="@ViewBag.ListIngredient" class="form-control">
                        <option value="">Select Active Ingredient 1</option>
                    </select>
                    <span asp-validation-for="ActiveIngredient1Id" class="text-danger"></span>


                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="ActiveIngredient2Id"></label>

                    <select asp-for="ActiveIngredient2Id" asp-items="@ViewBag.ListIngredient" class="form-control">
                        <option value="">Select Active Ingredient 2</option>
                    </select>
                    <span asp-validation-for="ActiveIngredient2Id" class="text-danger"></span>


                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        @if (Model.InteractionId != 0)
                        {
                            <button type="submit" class="btn btn-primary form-control">Update</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary form-control">Add</button>
                        }
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Admin" asp-action="ListMedicationInteraction" class="btn btn-outline-primary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>
      



            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}