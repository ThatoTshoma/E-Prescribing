@model ActiveIngredient

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Update Active Ingredient</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-action="UpdateActiveIngredient" method="post">
            <input asp-for="IngredientId" hidden />

            <div class="border p-3">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-floating py-2 col-12">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" aria-required="true" placeholder="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Admin" asp-action="ListActiveIngredient" class="btn btn-outline-primary border form-control">
                            Back
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
