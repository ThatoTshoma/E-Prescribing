@model IEnumerable<PatientCondition>
@{
    ViewData["Title"] = "Patient Chronic Condition";
    Layout = "~/Views/Shared/_AnaesthesiologistLayout.cshtml";
}
<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">Chronic Condition</li>
        <li class="active">Patient Chronic Condition</li>
    </ol>
</div>
<div class="container px-6 mx-auto grid">

    <h2><b>@ViewData["Title"]</b></h2>
    <hr />
    <div>
        <dl class="dl-horizontal">
            <dt>
                <b>Patient Name:</b> @Model.FirstOrDefault()?.Patient.Name
            </dt>
            <dt>
                <b>ID Number:</b> @Model.FirstOrDefault()?.Patient.IdNumber
            </dt>
            <dd>

            </dd>

        </dl>


    </div>
    <hr style="border: 0; height: 4px; background: black;">




    <table class="table table-hover">
        <thead>
            <tr>
                <th>Chronic Conditions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var patientCondition in Model)
            {
                <tr>
                    <td>@patientCondition.Condition.Name</td>
                </tr>
            }
        </tbody>
    </table>
</div>
