@model E_Prescribing.Models.Booking

@{
    ViewData["Title"] = "Booking Details";
    Layout = "~/Views/Shared/_AnaesthesiologistLayout.cshtml";
}
<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">Patients</li>
        <li class="active">Booking Details</li>
    </ol>
</div>
<div class="container px-6 mx-auto grid">

    <h2><b>@ViewData["Title"]</b></h2>
    <hr />

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Patient Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Anaesthesiologist.Name)
        </dd>

        <dt>
            Doctor Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Patient.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

   

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @if (Model.Status)
            {
                @("Active")
            }
            else
            {
                @("Inactive")
            }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Anaesthesiologist", "EditBooking", new { id = Model.BookingId }) |
    @if (Model.Status)
    {
        @Html.ActionLink("Back to List", "ApprovedBooking")
    }
    else
    {
        @Html.ActionLink("Back to List", "PendingBooking")
    }
</p>
