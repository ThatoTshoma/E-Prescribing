@model IEnumerable<PatientTreatment>
@{
    ViewData["Title"] = "List Treatment";
    Layout = "~/Views/Shared/_SurgeonLayout.cshtml";
}
<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">Treatment</li>
        <li class="active">List Treatment</li>
    </ol>
</div>
<div class="container px-6 mx-auto grid">

    <h2><b>@ViewData["Title"]</b></h2>
    <hr />
    <div>
        <dl class="dl-horizontal">
            <dt>
                <b>Patient Name:</b> @Model.FirstOrDefault()?.Patient.Name
            </dt>
            <dt>
                <b>Id Number:</b> @Model.FirstOrDefault()?.Patient.IdNumber
            </dt>
            <dd>

            </dd>

        </dl>


    </div>
    <hr style="border: 0; height: 4px; background: black;">


<table class="table table-hover">
    <thead>
        <tr>
            <th>Patient Name</th>
            <th>Treatment Code</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patientTreatment in Model)
        {
            <tr>
                <td>@patientTreatment.Patient.Name</td>
                <td>@patientTreatment.Treatment.Code</td>
            </tr>
        }
    </tbody>
</table>
</div>
