@model E_Prescribing.CollectionModel.PatientTreatmentCollection
@{
    ViewData["Title"] = "Add Treatment";
    Layout = "~/Views/Shared/_SurgeonLayout.cshtml";
}
<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">Treatment</li>
        <li class="active">Add Treatment</li>
    </ol>
</div>
<div class="container px-6 mx-auto grid">

    <h2><b>@ViewData["Title"]</b></h2>
    <hr />
        <form asp-controller="Surgeon" asp-action="AddPatientTreatment" method="post">
            <input asp-for="PatientTreatment.PatientId" type="hidden" />

            <div>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.PatientTreatment.Patient.Name)
                    </dt>
                    <dd>
                        <span>@Model.Patients.FirstOrDefault(c => c.PatientId == Model.PatientTreatment.PatientId)?.Name</span>
                    </dd>


                </dl>
            </div>
            <hr style="border: 0; height: 4px; background: black;">


            <div class="form-floating mb-3">
            <label asp-for="PatientTreatment.TreatmentId"></label>
                <select asp-for="PatientTreatment.SelectedTreaments" asp-items=@ViewBag.TreatmentList class="form-control" id="Treatment" multiple>
                    <option value="">Select Treatment Code</option>
                </select>
                <span asp-validation-for="PatientTreatment.TreatmentId" class="text-danger"></span>

            </div>

            <div class="form-floating mb-3">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </form>
    </div>

@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <link href="~/css/chosen.min.css" rel="stylesheet" />
    <script src="~/js/chosen.jquery.min.js"></script>
    <script>
        $(function () {

            $("#Treatment").chosen({
                width: "100%"
            });

        });

    </script>
}
