@model E_Prescribing.CollectionModel.PatinetVitalCollection


<div class="row">
    <div class="col-md-4">
        <form asp-controller="Nurse" asp-action="AddPatientVital" method="post">
            <input asp-for="PatientVital.PatientId" type="hidden" />

            <div>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.PatientVital.Patient.Name)
                    </dt>
                    <dd>
                        <span>@Model.Patients.FirstOrDefault(c => c.PatientId == Model.PatientVital.PatientId)?.Name</span>
                    </dd>


                </dl>
            </div>
            <hr style="border: 0; height: 4px; background: black;">


            <div class="form-floating mb-3">
                <select asp-for="PatientVital.SelectedVital" asp-items=@ViewBag.VitalList class="form-control" id="Vital" multiple>
                    <option value="">Select Vital</option>
                </select>
                <label asp-for="PatientVital.VitalId"></label>
                <span asp-validation-for="PatientVital.VitalId" class="text-danger"></span>

            </div>

            <div class="form-floating mb-3">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </form>
    </div>
</div>

@section scripts{
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <link href="~/css/chosen.min.css" rel="stylesheet" />
    <script src="~/js/chosen.jquery.min.js"></script>
    <script>
        $(function () {

            $("#Vital").chosen({
                width: "50%"
            });

        });

    </script>
}
