@model IEnumerable<PatientBed>
@{
    ViewData["Title"] = "Patient Bed";
    Layout = "~/Views/Shared/_NurseLayout.cshtml";
}
<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">Bed</li>
        <li class="active">Patient Bed</li>
    </ol>
</div>
<div class="container px-6 mx-auto grid">

    <h2><b>@ViewData["Title"]</b></h2>
    <hr />
    <div>
        <dl class="dl-horizontal">
            <dt>
                <b>Patient Name:</b> @Model.FirstOrDefault()?.Patient.Name
            </dt>
            <dd>
               
            </dd>
          
        </dl>


    </div>
    <hr style="border: 0; height: 4px; background: black;">




    <div class="col-6 text-end mb-4">
        <a asp-action="AssignBed" asp-route-id="@ViewBag.PatientId" class="btn btn-primary">

            <i class="bi bi-plus-circle"></i> &nbsp; Assign New Bed
        </a>
    </div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Bed Number</th>
            <th>Ward Number</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patientBed in Model)
        {
            <tr>
                <td>@patientBed.Bed.BedNumber</td>
                <td>@patientBed.Bed.Ward.WardNumber</td>
            </tr>
        }
    </tbody>
</table>
</div>
